VERBOSE=no
SHELL=/bin/sh
PATH=/bin:/usr/bin:/usr/local/bin

MAILDIR=/home/LOG1/mail
DEFAULT=$MAILDIR/default/
ORGMAIL=$MAILDIR/emergency/
LOGFILE=$MAILDIR/procmail.log

# Rules
# Handle pwmt mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*@lists.pwmt.org
| notmuch insert +list +pwmt -inbox --folder=default

# Handle archlinux.org mailing lists
:0:notmuch.lock
* ^(From|To|Cc):.*arch-announce@archlinux.org
| notmuch insert +list +archlinux +arch-announce --folder=default

:0:notmuch.lock
* ^(From|To|Cc):.*arch-events@archlinux.org
| notmuch insert +list +archlinux +arch-events --folder=default

:0:notmuch.lock
* ^(From|To|Cc):.*arch-general@archlinux.org
| notmuch insert +list +archlinux +arch-general -inbox --folder=default

# Handle git mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*git@vger.kernel.org
| notmuch insert +list +git -inbox --folder=default

# Handle abook mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*abook-devel@lists.sourceforge.net
| notmuch insert +list +abook -inbox --folder=default

# Handle notmuch mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*@notmuchmail.org
| notmuch insert +list +notmuch -inbox --folder=default

# Handle remind mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*remind.*@lists.roaringpenguin.com
| notmuch insert +list +remind -inbox --folder=default

# Handle mplayer mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*mplayer*
| notmuch insert +list +mplayer -inbox --folder=default

# Add mail with notmuch
:0:notmuch.lock
* .*
| notmuch insert --folder=default

