VERBOSE=no
SHELL=/bin/sh
PATH=/bin:/usr/bin:/usr/local/bin

MAILDIR=/home/LOG1/mail
DEFAULT=$MAILDIR/default/
ORGMAIL=$MAILDIR/emergency/
LOGFILE=$MAILDIR/procmail.log

# Rules
# Handle pwmt mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*@lists.pwmt.org
| notmuch-deliver -v -t list -t pwmt -r inbox default

# Handle archlinux.org mailing lists
:0:notmuch.lock
* ^(From|To|Cc):.*arch-announce@archlinux.org
| notmuch-deliver -v -t list -t archlinux -t arch-announce default

:0:notmuch.lock
* ^(From|To|Cc):.*arch-events@archlinux.org
| notmuch-deliver -v -t list -t archlinux -t arch-events default

:0:notmuch.lock
* ^(From|To|Cc):.*arch-general@archlinux.org
| notmuch-deliver -v -t list -t archlinux -t arch-general -r inbox default

# Handle git mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*git@vger.kernel.org
| notmuch-deliver -v -t list -t git -r inbox default

# Handle abook mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*abook-devel@lists.sourceforge.net
| notmuch-deliver -v -t list -t abook -r inbox default

# Handle notmuch mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*@notmuchmail.org
| notmuch-deliver -v -t list -t notmuch -r inbox default

# Handle remind mailing list
:0:notmuch.lock
* ^(From|To|Cc):.*remind.*@lists.roaringpenguin.com
| notmuch-deliver -v -t list -t remind -r inbox default

# Add mail with notmuch
:0:notmuch.lock
* .*
| notmuch-deliver -v default

